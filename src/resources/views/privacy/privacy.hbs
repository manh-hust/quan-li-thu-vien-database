<div class="mt-4 ">
    <div class="container">
        <div class="row justify-content-around">

            <div class="col-6">
                <h3>Thông tin cá nhân</h3>
                <form class="mt-4">
                    <div class="form-group mb-3">
                        <label for="admin">Chức vụ</label>
                        <input type="text" class="form-control" id="admin" name="admin"
                            value={{this.user.authorize}} disabled>
                    </div>
                    <div class="form-group mb-3">
                        <label for="name">Họ và Tên</label>
                        <input type="text" class="form-control" id="name" name="name" value="{{fullName}}" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <label for="email">Tên đăng nhập/Email</label>
                        <input type="text" class="form-control" id="email" name="email" value="{{this.user.email}}" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <label for="sdt">SĐT</label>
                        <input type="text" class="form-control" id="sdt" name="SĐT" value="{{this.user.SĐT}}" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <label for="address">Địa chỉ</label>
                        <input type="text" class="form-control" id="address" name="address" value="{{this.user.address}}" disabled>
                    </div>
                    <div class="form-group mb-3">
                        <label for="pass">Password</label>
                        <input type="password" class="form-control" id="pass" name="pass" value="9999999999"
                            disabled>
                    </div>
                    <button type="button" class="btn btn-primary btn-edit">Chỉnh sửa</button>
                    <button type="submit" class="btn btn-primary btn-edit ml-2">Lưu lại</button>
                </form>
            </div>
            <div class="col-3 ">
                <div class="container">
                    <div class="row justify-content-md-center">
                        <h4 class="text-center"> Avatar</h4>
                        <img class="privacy-image" src="/img/avata-user-{{avatar}}.png"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>