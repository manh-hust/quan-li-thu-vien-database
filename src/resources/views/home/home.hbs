<div class="container home-container">
  <div id="carouselExampleDark" class="carousel carousel-dark slide home-slider" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active" data-bs-interval="10000">
        <img src="http://localhost:3000/img/brow.png"  alt="...">
        <span>Thư mục sách mới tháng 11</span>
        <div class="carousel-caption d-none d-md-block">
          <h3 class="text-light">Project môn Cơ sở dữ liệu</h3>
          <p>GV hướng dẫn: Nguyễn Thị Oanh</p>
        </div>
      </div>
      <div class="carousel-item" data-bs-interval="2000">
        <img src="http://localhost:3000/img/green.png"  alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h3 class="text-light">Phần mềm quản lí thư viện</h3>
          <p>Demo một số chức năng cơ bản của thư viện online</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="http://localhost:3000/img/orange.png"  alt="...">
        <div class="carousel-caption d-none d-md-block">
          <h3 class="text-light">Nhóm 9</h3>
          <p>Đỗ Đức Mạnh - Hà Thị Linh - Trần Quang Huy</p>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <div class="home-content">
      <div class="home-news ">
        <h4>TIN TỨC</h4>
        <ul class="ms-2 mt-2">
          {{#each news}}
          <li><a href="http://localhost:3000/news">{{this.title}}</a></li>
          {{/each}}
        </ul>
      </div>
      <div class="home-activity">
        <h4>SẢN PHẨM - DỊCH VỤ</h4>
        <ul class="list">
          <li class="item">
            <span class="item-title">Thư mục sách mới</span>
            <div class="swiper mySwiper">
              <div class="swiper-wrapper">
                {{#each newListBook}}
                <div class="swiper-slide">
                  <img src={{this.url}} alt="">
                  <a class="swipe-slide-link" href="/search/detail/{{this.titleID}}">{{this.name}}</a>
                </div>
                {{/each}}
              </div>
            </div>
            <a href="#" class="xem-them">Xem thêm</a>
          </li>
          <li class="item">
            <span class="item-title">Mượn nhiều</span>
            <div class="swiper mySwiper">
              <div class="swiper-wrapper">
                {{#each mostBorrow}}
                <div class="swiper-slide">
                  <img src={{this.url}} alt="">
                  <a class="swipe-slide-link" href="/search/detail/{{this.titleID}}"> 
                       {{this.name}} 
                  </a>
                </div>
                {{/each}}
              </div>
            </div>
            <a href="/search/mostBorrow" class="xem-them">Xem thêm</a>
          </li>
          <li class="item">
            <span class="item-title">Sách hay</span>
            <div class="swiper mySwiper">
              <div class="swiper-wrapper">
                {{#each bestBook}}
                <div class="swiper-slide">
                  <img src={{this.url}} alt="">
                  <a class="swipe-slide-link" href="/search/detail/{{this.titleID}}">{{this.name}}</a>
                </div>
                {{/each}}
              </div>
            </div>
            <a href="/search/category/00000004" class="xem-them">Xem thêm</a>
          </li>
          <li class="item">
            <span class="item-title">Tác giả nổi bật</span>
            <div class="swiper mySwiper">
              <div class="swiper-wrapper">
                {{#each author}}
                <div class="swiper-slide">
                  <img src="https://salt.tikicdn.com/cache/200x200/ts/product/db/71/6e/aafe6691ddc6d3372522525e9eef1403.jpg.webp" alt="">
                  <a class="swipe-slide-link" href="search/author/{{this.author_id}}" >{{this.last_name}} {{this.first_name}}</a>
                </div>
                {{/each}}
              </div>
            </div>
            <a href="/search/author" class="xem-them">Xem thêm</a>
          </li>
        </ul>
      </div>
  </div>
</div>

  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
      var swiper = new Swiper(".mySwiper", {
        slidesPerView: 4,
        spaceBetween: 30,
        speed: 600,
        loop: true,
        autoplay: {
          delay: 3000
        }
      });
    </script>