<div class="container">
    <div class="mt-3 mb-3 d-flex text-center">
        <h2 class="category-title">
            {{title}}
        </h2>
        <h2>
            -({{total}})
        </h2>
    </div>
    <div class="row gx-4 gy-4">
        {{#each data}}
        <div class="col-3">
            <div class="card" >
                <img src="/img/biasach.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    {{#if this.name}}
                    <h5 class="card-title">{{this.name}}[5]</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href='/search/detail/{{this.titleID}}' class="btn btn-primary">Đi đến ==></a>
                    {{else}}
                    <h5 class="card-title">{{this.lastName}} {{this.firstName}}[5]</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href='/search/{{this.lastName}}{{this.firstName}}' class="btn btn-primary">Đi đến ==></a>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>