<div class="header-category mt-5 container">
    <div class="dropdown">
        {{#if category1}}
        <button class="btn btn-primary dropdown-toggle" type="button" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            Thể loại
        </button>
        {{else}}
        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="navbarDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            Thể loại
        </button>
        {{/if}}
        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            {{#each types}}
            <li><a class="dropdown-item" href="/search/category/{{this.typeID}}">{{this.name}}</a></li>
            {{/each}}
        </ul>
    </div>
    <div class="btn-group btn-group-category" role="group" aria-label="Basic outlined example">
        {{#if good}}
        <a href="/search/category/00000004" type="button" class="btn btn-category btn-primary">Sách nên đọc</a>
        {{else}}
        <a href="/search/category/00000004" type="button" class="btn btn-category btn-outline-primary">Sách nên đọc</a>
        {{/if}}
        {{#if mostBorrow}}
        <a href="/search/mostBorrow" type="button" class="btn btn-category btn-primary">Xem nhiều nhất</a>
        {{else}}
        <a href="/search/mostBorrow" type="button" class="btn btn-category btn-outline-primary">Xem nhiều nhất</a>
        {{/if}}
        {{#if author}}
        <a href="/search/author" type="button" class="btn btn-category btn-primary">Tác giả</a>
        {{else}}
        <a href="/search/author" type="button" class="btn btn-category btn-outline-primary">Tác giả</a>
        {{/if}}
        <a href="/search/year" type="button" class="btn btn-category btn-outline-primary">Năm xuất bản</a>
    </div>
</div>
<div class="container">
    <div class="mt-3 mb-3 d-flex text-center">
        <h2 class="category-title">
            {{title}}
        </h2>
        <h2>
            -({{total}})
        </h2>
    </div>
    <div class="row gx-4 gy-4">
        {{#each data}}
        <div class="col-3">
            <div class="card card-category" >
                {{#if this.url}}
                <img src="{{this.url}}" class="card-img-top card-img-category" alt="img">
                {{else}}
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRikBzoJwJucNnFjsLNL4pIyD45_CcAIslSBA&usqp=CAU" class="card-img-top card-img-category" alt="img">
                {{/if}}
                <div class="card-body">
                    {{#if this.name}}
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">
                        {{this.summary}}
                    </p>
                    <a href='/search/detail/{{this.titleID}}' class="btn btn-primary">Xem thông tin</a>
                    {{else}}
                    <h5 class="card-title">{{this.lastName}} {{this.firstName}}</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href='/search/author/{{this.authorID}}' class="btn btn-primary">Các tác phẩm</a>
                    {{/if}}
                </div>
            </div>
        </div>
        {{else}}
        <div class="mt-5">
            <h4 class="mt-3"> Chưa có sách thể loại này!</h4>
        </div>
        {{/each}}
    </div>
</div>

