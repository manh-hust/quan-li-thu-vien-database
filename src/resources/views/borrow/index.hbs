<div class="container container-borrow">
    <h1 class="mt-3 mb-3" data-state="{{state}}" id="title-borrow">Sách đang mượn</h1>
    <div class="btn btn-group ps-0">
        <a href="/borrow" class="btn  btn-outline-success" data-state="all">Tất cả</a>
        <a href="/borrow/W" class="btn btn-outline-success" data-state="W">Đang chờ duyệt</a>
        <a href="/borrow/B" class="btn btn-outline-success" data-state="B">Đang mượn</a>
        <a href="/borrow/R"  class="btn btn-outline-success" data-state="R">Đã trả</a>
    </div>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Tên</th>
            <th scope="col">Ngày mượn</th>
            <th scope="col">Ngày trả</th>
            <th scope="col">Còn lại</th>
            <th scope="col">Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
            <th scope="row">1</th>
            <td>{{this.name}}</td>
            <td>{{this.date}}</td>
            <td>{{this.returnDate}}</td>
            <td>{{this.day}} ngày</td>
            <td>{{this.note}}</td>
            </tr>
            {{else}}
            <th scope="row"></th>
            <td>Không có dữ liệu !</td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            {{/each}}
        </tbody>
    </table>

</div>


<script>
    const title = $('#title-borrow')
    const state = title.data('state')
    const btns = $('.container-borrow a')
    btns.each(function(i){
            console.log($(this).data('state'))
        if($(this).data('state') == state){
            $(this).removeClass('btn-outline-success')
            $(this).addClass('btn-success')
        }
    })
</script>